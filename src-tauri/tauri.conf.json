{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "naggy",
  "version": "0.1.0",
  "identifier": "naggy",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "naggy",
        "width": 500,
        "height": 400,
        "minHeight": 400,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": true,
        "transparent": true,
        "visibleOnAllWorkspaces": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:test.db"]
    }
  }
}
